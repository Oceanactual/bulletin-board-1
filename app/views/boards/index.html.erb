<a href="/boards">Bulletin Board</a>
<hr>

<h1><%=@the_board.name%></h1>
<hr>

<div>
  <div>
    <h2>
      Add a new post
    </h2>

    <form action="/insert_post" method="post">
      <div>
        <label for="post_title">
          Title
        </label>

        <input id="post_title" type="Text" name="the_post_title">
      </div>
        <div>
        <label for="post_body">
          Body
        </label>

        <textarea id="post_body" name="the_post_body"></textarea>
      </div>     
       <div>
        <label for="post_expires">
          Expires on
        </label>

        <input id="post_expires" name="the_post_expires" type="date" placeholder="mm/dd/yyyy">
      </div>
      <input name = "the_board_id" value = <%=@the_board.id%> style = "display:none;">

      <button>
        Add post
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div><h2>Active Posts</h2>
  <div>
    <table border="1">
      <tr>
        <th>
          Title
        </th>

        <th>
          Body
        </th>

        <th>
          Posted on
        </th>

        <th>
          Expires on
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_posts.each do |a_post| %>
      <tr>
        <td>
          <%= a_post.title %>
        </td>

        <td>
          <%= a_post.body %>
        </td>

        <td>
          <%= time_ago_in_words(a_post.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_post.expires_on) %> ago
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

<div>
  <div><h2>Expired Posts</h2>
  <div>
    <table border="1">
      <tr>
        <th>
          Title
        </th>

        <th>
          Body
        </th>

        <th>
          Posted on
        </th>

        <th>
          Expired on
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_posts.each do |a_post| %>
      <tr>
        <td>
          <%= a_post.title %>
        </td>

        <td>
          <%= a_post.body %>
        </td>

        <td>
          <%= time_ago_in_words(a_post.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_post.updated_at) %> ago
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
